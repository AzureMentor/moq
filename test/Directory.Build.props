<Project>
  <PropertyGroup>
    <MSBuildAllProjects>$(MSBuildAllProjects);$(MSBuildThisFileFullPath)</MSBuildAllProjects>
    <NoWarn>1701;1702;1705;0436</NoWarn>

	  <IncludeMSBuild>true</IncludeMSBuild>
	  <IncludeRoslyn>true</IncludeRoslyn>
  </PropertyGroup>

	<ItemGroup Condition="'$(IncludeXunit)' == 'true'">
		<PackageReference Include="xunit" Version="$(XunitVersion)" />
    <PackageReference Include="xunit.runner.visualstudio" Version="$(XunitVersion)" Condition="'$(CI)' == 'true'" />
    <PackageReference Include="xunit.runner.console" Version="$(XunitVersion)" />
    <PackageReference Include="NETStandard.Library" Version="2.0.0" />
  </ItemGroup>

  <Import Project="..\Directory.Build.props" />
</Project>
